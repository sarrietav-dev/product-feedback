<%= turbo_frame_tag dom_id(@reply, dom_id(@comment)) do %>
  <%= form_with model: @reply, url: comment_replies_path(@comment), class: "mt-3 flex gap-3 items-start" do |form| %>
    <%= form.text_area :content, rows: 5, class: "form-input" %>
    <%= form.submit "Post Reply", class: "btn btn--accent md:col-start-4 md:col-end-5" %>
  <% end %>
<% end %>
