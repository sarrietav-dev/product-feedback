<% if suggestion.upvotes.exists?(user: Current.user) %>
  <%= button_to suggestion_upvote_path(suggestion, suggestion.upvotes.find_by(user: Current.user)), method: :delete, class: device == :mobile ? "upvote upvote--selected upvote--mobile" : "upvote upvote--selected upvote--desktop" do %>
    <%= inline_svg_tag "shared/icon-arrow-up.svg" %>
    <%= suggestion.upvotes.count %>
  <% end %>
<% else %>
  <%= button_to suggestion_upvotes_path(suggestion), class: device == :mobile ? "upvote upvote--mobile" : "upvote upvote--desktop" do %>
    <%= inline_svg_tag "shared/icon-arrow-up.svg" %>
    <%= suggestion.upvotes.count %>
  <% end %>
<% end %>
